# Step 1: Install NVM (Node Version Manager)
curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.39.7/install.sh | bash

# Step 2: Exit and reopen the terminal
exit
# Reopen terminal and run:
source ~/.nvm/nvm.sh

# Step 3: Install Node.js version 20.16
nvm install 20.16.0
nvm use 20.16.0

# Step 4: Install SASS using npm
npm install sass@3.7.4
